<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddAstronautActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name:" />

        <EditText
            android:id="@+id/male_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="isMale (0 - false, 1 - true):" />

        <EditText
            android:id="@+id/age_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Age:" />

        <EditText
            android:id="@+id/height_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Height:" />

        <EditText
            android:id="@+id/mass_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mass:" />

        <EditText
            android:id="@+id/activity_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Activity (1-3):" />

        <EditText
            android:id="@+id/dna_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="DNA Number:" />


        <EditText
            android:id="@+id/job_role_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Job Role:" />

        <EditText
            android:id="@+id/level_of_importance_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Level of Importance (1-10):" />

        <EditText
            android:id="@+id/timezone_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Timezone (Number):" />

        <EditText
            android:id="@+id/note_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Notes:" />
    </TableLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSaveAstronaut"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add an Astronaut"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>